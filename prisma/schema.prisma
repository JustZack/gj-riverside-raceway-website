// Prisma schema file - defines the structure of the database
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model TrackEvent {
    id          Int               @id @default(autoincrement())
    start       DateTime          @default(now())
    end         DateTime          @default(now())
    name        String
    description String?
    livetimeID  Int?              @unique
    liveTimeEvent LiveTimeEvent?  @relation(fields: [livetimeID], references: [id])
    youtubeID   String?
    visible     Boolean           @default(true)
    cancelled   Boolean           @default(false)
    createdAt   DateTime          @default(now())
    updatedAt   DateTime          @default(now()) @updatedAt
}

//Live Time Data represents data scraped from Live Time
model LiveTimeEvent {
    id          Int             @id
    trackEvent  TrackEvent?
    name        String?
    entries     Int?
    drivers     Int?
    laps        Int?
    startedAt   DateTime?
    createdAt   DateTime        @default(now())
    updatedAt   DateTime        @default(now()) @updatedAt
}